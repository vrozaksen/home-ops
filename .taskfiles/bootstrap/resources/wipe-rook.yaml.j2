---
apiVersion: batch/v1
kind: Job
metadata:
  name: &app wipe-rook
  namespace: default
  labels:
    app.kubernetes.io/name: *app
spec:
  parallelism: {{ ENV.NODES }}
  template:
    metadata:
      labels:
        app.kubernetes.io/name: *app
    spec:
      restartPolicy: Never
      initContainers:
        - name: data
          image: docker.io/library/alpine:latest
          command: ["/bin/sh", "-c"]
          args: ["rm -rf /mnt/host_var/lib/rook"]
          volumeMounts:
            - mountPath: /mnt/host_var
              name: host-var
          securityContext:
            privileged: true
          resources: {}
      containers:
        - name: disk
          image: docker.io/library/alpine:latest
          command: ["/bin/sh", "-c"]
          args:
            - |
              apk add --no-cache device-mapper findutils nvme-cli parted sgdisk util-linux util-linux-misc zfs;
              DISK="/dev/nvme0n1"
              echo "=== Wiping $DISK ===";

              # Remove partitions and metadata
              sgdisk --zap-all $DISK;

              # Write zeros to the beginning of the disk
              dd if=/dev/zero of="$DISK" bs=1M count=100 oflag=direct;

              # Discard remaining data (if supported)
              blkdiscard $DISK || echo "blkdiscard not supported or disk is busy";

              # Wipe filesystem signatures
              wipefs -a $DISK || echo "Wipefs failed";

              # Inform the kernel of partition changes
              partprobe $DISK || echo "Kernel not updated, you might need a reboot";

              # Create a new ZFS pool
              zpool create -f data $DISK || echo "ZFS pool creation failed";

              echo "=== Finished wiping and preparing $DISK ===";
              zpool status;

          securityContext:
            privileged: true
          volumeMounts:
            - name: host-dev
              mountPath: /dev
          resources: {}
      volumes:
        - name: host-var
          hostPath:
            path: /var
        - name: host-dev
          hostPath:
            path: /dev
            type: Directory
      topologySpreadConstraints:
        - maxSkew: 1
          labelSelector:
            matchLabels:
              app.kubernetes.io/name: *app
          topologyKey: kubernetes.io/hostname
          whenUnsatisfiable: DoNotSchedule
