machine:
  type: controlplane
  network:
    hostname: alfheim
  #disks:
  #  - device: /dev/disk/by-id/ata-Samsung_SSD_870_EVO_500GB_S7EWNL0X715625F
  #    partitions:
  #      - mountpoint: /var/openebs/local
  install:
    diskSelector:
      model: "Samsung SSD 870"
  nodeLabels:
    topology.kubernetes.io/zone: m
    intel.feature.node.kubernetes.io/gpu: "true"
---
apiVersion: v1alpha1
kind: EthernetConfig
name: eno1
features: # tso off gso off gro off
    tx-tcp-segmentation: false      # TSO (IPv4)
    tx-tcp6-segmentation: false     # TSO (IPv6)
    tx-generic-segmentation: false  # GSO
    rx-gro: false                   # GRO
---
apiVersion: v1alpha1
kind: EthernetConfig
name: enp1s0f0np0
rings:
    rx: 4096
    tx: 4096
---
apiVersion: v1alpha1
kind: EthernetConfig
name: enp1s0f1np1
rings:
    rx: 4096
    tx: 4096
